<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.homeFragment.PostsDetailsFragment">

    <ImageView
        android:id="@+id/PostsDetailsFragment_post_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/post_image"
        android:scaleType="center"/>

    <View
        android:id="@+id/PostsDetailsFragment_v_details"
        android:layout_width="match_parent"
        android:background="@drawable/post_details"
        android:layout_height="@dimen/_400sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/PostsDetailsFragment_iv_favorite"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintTop_toTopOf="@id/PostsDetailsFragment_v_details"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:src="@drawable/ic_favorite_black_24dp"
        />
    <TextView
        android:id="@+id/PostsDetailsFragment_tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/PostsDetailsFragment_v_details"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="طرق الوقايه من الامراض"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/colorAccent"
        />
    <TextView
        android:id="@+id/PostsDetailsFragment_tv_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_margin="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PostsDetailsFragment_tv_details"/>

</androidx.constraintlayout.widget.ConstraintLayout>