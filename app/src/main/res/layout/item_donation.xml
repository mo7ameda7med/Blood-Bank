<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:dragEdge="left"
    app:mode="same_level"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageButton
           android:id="@+id/item_donation_I_btn_contact"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/btn_slider_image"/>
        <ImageButton
            android:id="@+id/item_donation_I_btn_info"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/shape_circil"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/item_donation_tv_blood_type"
            android:layout_marginStart="-50dp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/shape_donation"
            >
            <TextView
                android:id="@+id/item_donation_tv_name"
                style="@style/donation_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/item_donation_tv_hospital"
                style="@style/donation_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/item_donation_tv_Governorates"
                style="@style/donation_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/item_donation_tv_blood_type"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/shape_circil"
            android:text="B+"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_30sdp"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>

